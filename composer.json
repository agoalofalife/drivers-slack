{
  "name": "fondbot/slack",
  "description": "Slack driver for FondBot",
  "type": "library",
  "license": "MIT",
  "authors": [
    {
      "name": "Ilya Chibarov",
      "email": "agoalofalife@gmail.com"
    }
  ],
  "require": {
    "php": "^7.1",
    "fondbot/framework": "^1.0",
    "guzzlehttp/guzzle": "^6.2"
  },
  "require-dev": {
    "fzaninotto/faker": "^1.6",
    "larapack/dd": "^1.1",
    "mockery/mockery": "^1.0",
    "phpunit/phpunit": "^6.0"
  },
  "autoload": {
    "psr-4": {
      "FondBot\\Drivers\\Slack\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Tests\\": "tests/"
    }
  },
  "scripts": {
    "test": "vendor/bin/phpunit --stop-on-failure --no-coverage",
    "cs": "php-cs-fixer fix --allow-risky=yes"
  },
  "config": {
    "preferred-install": "dist",
    "sort-packages": true
  },
  "minimum-stability": "dev",
  "prefer-stable": true,
  "extra": {
    "branch-alias": {
      "dev-master": "1.0-dev"
    }
  }
}
